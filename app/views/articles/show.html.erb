<%= form_for [@articles, Comment.new] do |f| %>
  <p>
    <%= f.label :body, "Add a new comment!" %><br/>
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Add comment" %></p>
<% end %>

<%= link_to 'Edit', edit_articles_path(@articles) %> |
