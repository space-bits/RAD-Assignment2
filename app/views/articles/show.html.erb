<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @articles.title %>
</p>


<p>
  <strong>Url:</strong>
  <%= @articles.url %>
</p>

<p>
  <strong>Text:</strong>
  <%= @articles.text %>
</p>

<p>
  <strong>By:</strong>
  <%= @articles.by %>
