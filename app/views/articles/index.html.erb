<p id="notice"><%= notice %></p>

<h1>articles</h1>
<div class="articles">
<% @articles.each do |article| %>
  <div class="article">
    <p><%= article.title %></p>
    <p><%= article.url %></p>
    <p>Posted <%= time_ago_in_words(article.created_at) %> ago by <%= article.by %>.</p>
  <div>
<% end %>
</div>

<%= link_to 'Post New Article', new_article_path %>
