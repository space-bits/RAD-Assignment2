<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="articles col-md-10">
    <% @articles.each do |article| %>
      <div class="article ">
        <p><%= article.id %>.  <%= link_to article.title, article %>  (<%= article.url %>)</p>
        <p class="text-muted" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Posted by <%= article.by %> <%= time_ago_in_words(article.created_at) %> ago.</p>
      </div>
      <%= link_to 'Post New Article', new_article_path %>
    <% end %>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
