<p id="notice"><%= notice %></p>

<h1>articles</h1>
<div class="articles articles-table">
  <table>
    <thead>
      <tr>
        <th>By</th>
        <th>Text</th>
        <th>Url</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.by %></td>
          <td><%= article.text %></td>
          <td><%= article.url %></td>
          <td><%= article.title %></td>
          <td><%= link_to 'Show', articles %></td>
          <td><%= link_to 'Edit', edit_articles_path(articles) %></td>
          <td><%= link_to 'Destroy', articles, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

