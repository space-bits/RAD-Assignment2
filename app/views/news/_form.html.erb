<%= form_with(model: news, local: true) do |form| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Set this field to hidden and use the current users username to save -->
  <!-- Create a new hidden field to pass the username to the db -->
  <div class="field">
    <%= form.hidden_field :by %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :news_title %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :news_url %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, id: :news_text %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
