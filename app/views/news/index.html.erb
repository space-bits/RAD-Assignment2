<!-- Render the log in partial -->
<%= render partial: "register" %>

<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>By</th>
      <th>Text</th>
      <th>Url</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.by %></td>
        <td><%= news.text %></td>
        <td><%= news.url %></td>
        <td><%= news.title %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path %>
