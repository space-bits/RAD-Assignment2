<!-- # render all of the comments here -->
<p id="notice"><%= notice %></p>

<% @comments.each do |comment| %>
  <div class="comment">
    <p class="comment-detail"><%= get_username(comment.user_id) unless comment.user_id.nil? %> <%= time_ago_in_words(comment.created_at) %> on: <%= get_news_title(comment.article_id) %></p>
    <p class="comment-detail"><%= comment.body %></p>
  </div>
<% end %>
